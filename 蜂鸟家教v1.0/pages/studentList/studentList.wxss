
 page{
     height: 100%;
 }
.page{
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    height: 100%;
    background: #efefef;
}
.nav{
    position: relative;
    z-index: 99;
    display: flex;
    box-shadow: 2px 2px 5px #cc4d31;
    background-color: #fe4c40;
    border-radius:0px 0px 5px 5px;

}
.nav-son{
    color: #fff;
    z-index: 99;
    display: flex;
    flex: 1;
    text-align: center;
    height: 45px;
    align-items:center;
    justify-content:center;
    font-size: 14px;
}

.content{
    display: inline-block;
    font-size: 35rpx;
}

.temp{
    position: absolute;
    z-index: 4;
}
.temp1{
    display: none;
    width: 100%;
    max-height: 550rpx;
    overflow-y: scroll;
    line-height:100rpx;
    background: #fff;
}
.temp2{
    display: none;
    width: 100%;
    max-height: 750rpx;
    overflow-y: scroll;
    line-height:100rpx;
    background: #fff;
}
.slidedown{
    transform:  translateY(0%);
}
.temp view{
    
    border-bottom: 1px solid #efefef;
    
    font-size: 14px;
    color: #666;
}

.current{
    background: #e0e0e0;
}
.current2{
    background: #fff;
}

.fullbg{
    display:none;
    position: fixed;
    top:0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgb(1, 1, 1);
    transition: all 2s;
    
}
.fullopacity{
    display:flex;
    opacity: .5;
}

.nav-son.active .content{
    color: #fff;
}

 .icon{
   height: 30rpx;
   width: 35rpx;
}

@keyframes slidown{
    from{
        transform:  translateY(-100%);
    }
    to{
        transform:  translateY(0%);
    }
}
.slidown{
    display: block;
    animation: slidown .3s ease-in both;
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}
.slidup{
    display: block;
    animation: slidup .3s ease-in both;
}
.disappear{
    display: none;
}



